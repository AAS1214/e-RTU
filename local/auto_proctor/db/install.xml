<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/auto_proctor/db" VERSION="20231212" COMMENT="XMLDB file for local auto_proctor plugin"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <!-- TABLE FOR AUTO-PROCTOR QUIZZES  -->
        <TABLE NAME="auto_proctor_quiz_tb" COMMENT="each record is fetched from the quiz table">
        <FIELDS>
            <!-- Define id as an auto-increment key -->
            <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
            <FIELD NAME="quizid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
            <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
            <FIELD NAME="monitor_tab_switching" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            <FIELD NAME="monitor_camera" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            <FIELD NAME="monitor_microphone" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        </FIELDS>
        <KEYS>
            <!-- Define id as the primary key -->
            <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            <!-- Define quizid as a foreign key -->
            <KEY NAME="fk_auto_proctor_quiz_tb_quizid" TYPE="foreign" FIELDS="quizid" REFTABLE="quiz" REFFIELDS="id"/>
        </KEYS>
        </TABLE>

        <!-- TABLE FOR AUTO-PROCTOR SESSION CONSENT  -->
        <TABLE NAME="auto_proctor_session_consent_tb" COMMENT="recorded session consent">
        <FIELDS>
            <!-- Define id as an auto-increment key -->
            <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
            <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            <FIELD NAME="quizid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            <FIELD NAME="attempt" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            <FIELD NAME="consent_tab_switching" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            <FIELD NAME="consent_camera" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            <FIELD NAME="consent_microphone" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        </FIELDS>
        <KEYS>
            <!-- Define id as the primary key -->
            <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            <!-- Define quizid as a foreign key -->
            <KEY NAME="fk_auto_proctor_session_consent_tb_userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
            <KEY NAME="fk_auto_proctor_session_consent_tb_attempt" TYPE="foreign" FIELDS="attempt" REFTABLE="quiz_attempts" REFFIELDS="attempt"/>
        </KEYS>
        </TABLE>

        <!-- TABLE FOR AUTO-PROCTOR TAB SWITCHING REPORT TABLE  -->
        <TABLE NAME="auto_proctor_tab_switching_report_tb" COMMENT="captured tab switching evidence">
        <FIELDS>
            <!-- Define id as an auto-increment key -->
            <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
            <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            <FIELD NAME="quizid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            <FIELD NAME="attempt" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            <FIELD NAME="stop_sharing" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            <FIELD NAME="img_name" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        </FIELDS>
        <KEYS>
            <!-- Define id as the primary key -->
            <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            <!-- Define quizid as a foreign key -->
            <KEY NAME="fk_auto_proctor_tab_switching_report_tb_userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
            <KEY NAME="fk_auto_proctor_tab_switching_report_tb_quizid" TYPE="foreign" FIELDS="quizid" REFTABLE="quiz" REFFIELDS="id"/>
            <KEY NAME="fk_auto_proctor_tab_switching_report_tb_attempt" TYPE="foreign" FIELDS="attempt" REFTABLE="quiz_attempts" REFFIELDS="attempt"/>
        </KEYS>
        </TABLE>
  </TABLES>
</XMLDB>
