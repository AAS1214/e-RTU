<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/auto_proctor/db" VERSION="20231212" COMMENT="XMLDB file for local auto_proctor plugin"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <!-- TABLE FOR AUTO-PROCTORE QUIZZES  -->
        <TABLE NAME="auto_proctor_quiz_tb" COMMENT="each record is fetched from the quiz table">
        <FIELDS>
            <!-- Define id as an auto-increment key -->
            <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
            <FIELD NAME="quizid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
            <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
            <FIELD NAME="monitor_tab_switching" TYPE="int" LENGTH="10" DEFAULT="0" NOTNULL="false" SEQUENCE="false"/>
            <FIELD NAME="monitor_camera" TYPE="int" LENGTH="10" DEFAULT="0" NOTNULL="false" SEQUENCE="false"/>
            <FIELD NAME="monitor_microphone" TYPE="int" LENGTH="10" DEFAULT="0" NOTNULL="false" SEQUENCE="false"/>
        </FIELDS>
        <KEYS>
            <!-- Define id as the primary key -->
            <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            <!-- Define quizid as a foreign key -->
            <KEY NAME="fk_auto_proctor_quiz_tb_quizid" TYPE="foreign" FIELDS="quizid" REFTABLE="mdl_quiz" REFFIELDS="id"/>
        </KEYS>
        </TABLE>
  </TABLES>
</XMLDB>
